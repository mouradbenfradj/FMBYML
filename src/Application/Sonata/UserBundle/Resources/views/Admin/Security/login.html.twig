<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A fully featured admin theme which can be used to build CRM, CMS, etc.">
    <meta name="author" content="Coderthemes">
    <link rel="shortcut icon" href="{{ asset('favicon.ico' ) }}">
    <title>{% block title %}FMB{% endblock %}</title>
    <link href="{{ asset('bundles/ssfmb/assets/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('bundles/ssfmb/assets/css/core.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('bundles/ssfmb/assets/css/components.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('bundles/ssfmb/css/baseTwig/componentsme.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('bundles/ssfmb/assets/css/icons.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('bundles/ssfmb/assets/css/pages.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('bundles/ssfmb/assets/css/menu.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('bundles/ssfmb/assets/css/responsive.css') }}" rel="stylesheet" type="text/css"/>
    <link rel="stylesheet" href="{{ asset('bundles/ssfmb/css/index.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/ssfmb/css/sidenavi-right.css') }}">
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <script src="{{ asset('bundles/ssfmb/assets/js/modernizr.min.js') }}"></script>
    <link rel="stylesheet" href="{{ asset('bundles/ssfmb/assets/css/nprogress.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/ssfmb/css/baseTwig/base.css') }}">
    {% block stylesheet %}
    {% endblock %}
    <script src="{{ asset('bundles/ssfmb/assets/js/jquery.min.js') }}"></script>
</head>
<body>

<div class="account-pages"></div>
<div class="clearfix"></div>
<div class="wrapper-page">
    <div class=" card-box">
        <div class="panel-heading">
            <h3 class="text-center"> Se connect√© a <strong class="text-custom">OYSTERPRO</strong></h3>
        </div>


        <div class="panel-body">
            <form action="{{ path("sonata_user_admin_security_check") }}" class="form-horizontal m-t-20" method="post">
                {% if error %}
                    <div class="alert alert-error">{{ error|trans({}, 'SonataUserBundle') }}
                        {{ error | replace({"Bad credentials." : "Invalid username or password."}) }}
                    </div>
                {% endif %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                <div class="form-group ">
                    <div class="col-xs-12">
                        <input class="form-control" type="text" id="username" name="_username"
                               value="{{ last_username }}" placeholder="nom d'utilisateur"/>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        <input type="password" id="password" name="_password" placeholder="mot de passe"
                               class="form-control"/>
                    </div>
                </div>

                <div class="form-group ">
                    <div class="col-xs-12">
                        <div class="checkbox checkbox-primary">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                            <label for="checkbox-signup">
                            {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                            </label>
                        </div>

                    </div>
                </div>

                <div class="form-group text-center m-t-40">
                    <div class="col-xs-12">
                        <input type="submit" class="btn btn-primary" id="_submit" name="_submit"
                               value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}"/>
                    </div>
                </div>
                {#
                                <div class="form-group m-t-30 m-b-0">
                                    <div class="col-sm-12">
                                        <a href="page-recoverpw.html" class="text-dark"><i class="fa fa-lock m-r-5"></i> Forgot your password?</a>
                                    </div>
                                </div>
                                #}
            </form>

        </div>
    </div>


</div>


<div class="connection">


    <div class="form-actions">
    </div>
    </form>
</div>

<script src="{{ asset('bundles/ssfmb/assets/js/nprogress.js') }}"></script>
<script src="{{ asset('bundles/ssfmb/assets/js/sonic.js') }}"></script>

<!-- end wrapper -->
<!-- jQuery  -->
<script src="{{ asset('bundles/ssfmb/assets/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('bundles/ssfmb/assets/js/detect.js') }}"></script>
<script src="{{ asset('bundles/ssfmb/assets/js/fastclick.js') }}"></script>
<script src="{{ asset('bundles/ssfmb/assets/js/jquery.slimscroll.js') }}"></script>
<script src="{{ asset('bundles/ssfmb/assets/js/jquery.blockUI.js') }}"></script>
<script src="{{ asset('bundles/ssfmb/assets/js/waves.js') }}"></script>
<script src="{{ asset('bundles/ssfmb/assets/js/wow.min.js') }}"></script>
<script src="{{ asset('bundles/ssfmb/assets/js/jquery.nicescroll.js') }}"></script>
<script src="{{ asset('bundles/ssfmb/assets/js/jquery.scrollTo.min.js') }}"></script>


<!-- App core js -->
<script src="{{ asset('bundles/ssfmb/assets/js/jquery.core.js') }}"></script>
<script src="{{ asset('bundles/ssfmb/assets/js/jquery.app.js') }}"></script>
<script src="{{ asset('bundles/ssfmb/js/SideNavi.js') }}"></script>
<script src="{{ asset('bundles/ssfmb/js/baseTwig/base.js') }}"></script>
{% block javascripts %}
{% endblock %}
</body>
</html>