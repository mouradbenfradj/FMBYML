{% extends "SSFMBBundle::layout.html.twig" %}

{% block body -%}
    <h1>DocsLines list</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>Refdocline</th>
            <th>Libarticle</th>
            <th>Descarticle</th>
            <th>Qte</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('docslines_show', { 'id': entity.refDocLine }) }}">{{ entity.refDocLine }}</a></td>
                <td>{{ entity.libArticle }}</td>
                <td>{{ entity.descArticle }}</td>
                <td>{{ entity.qte }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('docslines_show', { 'id': entity.refDocLine }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('docslines_edit', { 'id': entity.refDocLine }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('docslines_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
