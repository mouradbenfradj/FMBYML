{% extends '::base.html.twig' %}

{% block body -%}
    <h1>BonReception list</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Quantiter</th>
            <th>Duplication</th>
            <th>Datedereception</th>
            <th>Nlot</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('bonreception_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.quantiter }}</td>
                <td>{{ entity.duplication }}</td>
                <td>{% if entity.dateDeReception %}{{ entity.dateDeReception|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.nLot }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('bonreception_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('bonreception_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bonreception_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
