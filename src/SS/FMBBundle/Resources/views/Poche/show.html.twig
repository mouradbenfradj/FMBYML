{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Poche</h1>

    <table class="record_properties">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Quantite</th>
            <td>{{ entity.quantite }}</td>
        </tr>
        <tr>
            <th>Emplacement</th>
            <td>{{ entity.emplacement }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('poche') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('poche_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
