{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Corde list</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Placecorde</th>
            <th>Etatcorde</th>
            <th>Quantiter</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('corde_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.placeCorde }}</td>
                <td>{{ entity.etatCorde }}</td>
                <td>{{ entity.quantiter }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('corde_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('corde_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('corde_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
