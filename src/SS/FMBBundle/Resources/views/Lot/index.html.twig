{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Lot list</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>Lot</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('lot_show', { 'id': entity.lot }) }}">{{ entity.lot }}</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('lot_show', { 'id': entity.lot }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('lot_edit', { 'id': entity.lot }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lot_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
