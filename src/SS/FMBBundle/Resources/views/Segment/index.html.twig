{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Segment list</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nomsegment</th>
            <th>Longeur</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('segment_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nomSegment }}</td>
                <td>{{ entity.longeur }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('segment_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('segment_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('segment_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
