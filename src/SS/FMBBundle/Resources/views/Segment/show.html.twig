{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Segment</h1>

    <table class="record_properties">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nomsegment</th>
            <td>{{ entity.nomSegment }}</td>
        </tr>
        <tr>
            <th>Longeur</th>
            <td>{{ entity.longeur }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('segment') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('segment_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
