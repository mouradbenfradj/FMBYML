{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Stockage</h1>

    <table class="record_properties">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Article</th>
            <td>{{ entity.article }}</td>
        </tr>
        <tr>
            <th>Quantiter</th>
            <td>{{ entity.quantiter }}</td>
        </tr>
        <tr>
            <th>Duplication</th>
            <td>{{ entity.duplication }}</td>
        </tr>
        <tr>
            <th>Datedajout</th>
            <td>{{ entity.dateDajout|date('Y-m-d H:i:s') }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('stockage') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('stockage_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
