{% block body %}
    {{ parent() }}
    {% set page = 'suivit' %}
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="m-t-0 header-title"><b>Preparation Lanterne </b></h4>
                        <p class="text-muted m-b-30 font-13">
                        </p>
                        {{ form_start(form) }}
