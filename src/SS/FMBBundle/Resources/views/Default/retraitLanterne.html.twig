{% extends "SSFMBBundle::layout.html.twig" %}

{% block title %}
    Suivit - {{ parent() }}
{% endblock %}
{% block body %}
    <div class="container-fluid" xmlns="http://www.w3.org/1999/html">
        {{ parent() }}

        <div class="row">
            <div class="col-md-12">
                <form action="" method="post">
