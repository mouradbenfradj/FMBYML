        {{ parent() }}
        <div class="row">
            <div class="col-md-12">
                <form action="" method="post">
                    <ul class="pagination pagination-lg">
                        {{ knp_menu_render('SSFMBBundle:Builder:parcMAELMenu') }}
                    </ul>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped active" role="progressbar"
