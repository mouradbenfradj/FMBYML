                                                                                    <a title="{{ emplacement.stockslanterne.lanterne.nomlanterne }}
-article:
-date de creation
-date de MAE  "
                                                                                       href="">
                                                                                        <font color="#adff2f"> {{ emplacement.place }}</font>
                                                                                    </a>
                                                                                    <span style="display: none"
                                                                                          id="dateemplacement">{{ emplacement.dateDeRemplissage|date('Y-m-d') }}</span>

